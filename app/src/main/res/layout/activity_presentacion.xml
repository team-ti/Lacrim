<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    tools:context=".Presentacion">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">


                <TextView
                    android:gravity="center"
                    android:id="@+id/txt_nombreformulario"
                    android:layout_width="match_parent"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="30dp"
                    android:textStyle="bold"
                    android:text="Video Presentacion"/>


                <TextView
                    android:id="@+id/txt_sin_video"
                    android:layout_marginTop="50dp"
                    android:text="No hay video disponible"
                    android:textSize="16dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:visibility="gone"
                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <VideoView
                    android:id="@+id/video_presentacion"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:visibility="visible"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />


                <Button
                    android:textColor="#ffffff"
                    android:id="@+id/btn_agregar_video"
                    android:visibility="gone"
                    android:background="#198aff"
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:layout_marginBottom="20dp"
                    android:text="Agregar o cambiar video" />






            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>