<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeleccionarEquino"
    android:background="@drawable/background_popup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30px"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txt_detaddlle_equino_alimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Selecciona un equino"
            android:textSize="22dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_sin_equinos"
            android:layout_marginTop="50dp"
            android:text="No tienes equinos disponibles"
            android:textSize="16dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:visibility="gone"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/R_lista_selecciona_equino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>



</LinearLayout>







